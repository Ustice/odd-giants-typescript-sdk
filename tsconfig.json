{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    // "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    // "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*", "src/*.ts", "src/*/index.ts"],
      "@odd/api/*": ["node_modules/@odd/api/dist/esm/*"],
      // "@odd/api": ["node_modules/@odd/api/dist/esm", "node_modules/@odd/api/dist/esm/index.js", "node_modules/@odd/api/dist/esm/index.d.ts"],
      "@root/*": ["*", "*.ts", "*/index.ts"],
      "@test/*": ["test/*", "test/*.ts", "test/*/index.ts"],
      "@test": ["test/index.ts"]
    },
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/**/@types",
      "node_modules/@odd/api/dist/esm"
      // "node_modules/odd-giants-api/dist/esm/index.d.ts"
    ]
  },
  "exclude": [
    "node_modules/",
    "dist/"
    // "generated/**/node_modules/*",
    // "generated/**/dist/*"
  ],
  "include": ["src/**/*.ts", "test/**/*.ts", "*.ts", "jest/*.mjs"]
}
